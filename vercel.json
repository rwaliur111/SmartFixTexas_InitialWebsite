{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "server.py"
        }
    ],
    "env": {
        "ZOHO_EMAIL": "@zoho_email",
        "ZOHO_PASSWORD": "@zoho_password"
    }
}